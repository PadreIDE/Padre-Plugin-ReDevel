        host: localhost
        host_dist_type: linux-64b
        user: rd
        type: key
    srvA:
        host: serverA.example.com
        host_dist_type: linux-64b
        user: r-mj
        type: key
    srvB:
        host: serverB.example.com
        host_dist_type: linux-64b
        user: mj
        password-file: /etc/.redevel/tapir2.pass
        type: passwd-file
    mytestA:
        host: my.users.amazon.com
        host_dist_type: linux-32b
        user: karel.novak
        type: key
        identity_file: ~/.ssh/mj41.ppk
session:
    - session: "padre - redevel"
      hosts:
        - localhost
    - session_regexp: '^test'
      hosts:
        - mytestA
    - session_regexp: '^padre\ \-\ '
      hosts:
       - srvB
